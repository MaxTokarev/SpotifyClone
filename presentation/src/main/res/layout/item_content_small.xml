<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/_140sdp"
    android:layout_height="@dimen/_50sdp"
    android:layout_marginEnd="@dimen/_14sdp"
    app:cardCornerRadius="@dimen/_4sdp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_lighter">

        <ImageView
            android:id="@+id/ivAlbum"
            android:layout_width="@dimen/_36sdp"
            android:layout_height="@dimen/_36sdp"
            android:layout_marginStart="@dimen/_6sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tvNameMain"
            style="@style/BaseTextView.TextViewMain"
            android:layout_marginStart="@dimen/_6sdp"
            app:layout_constraintBottom_toTopOf="@+id/tvNameSecondary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivAlbum"
            app:layout_constraintTop_toTopOf="@+id/ivAlbum"
            tools:text="The Weekend" />

        <TextView
            android:id="@+id/tvNameSecondary"
            style="@style/BaseTextView.TextViewSecondary"
            android:layout_marginStart="@dimen/_6sdp"
            app:layout_constraintBottom_toBottomOf="@+id/ivAlbum"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivAlbum"
            app:layout_constraintTop_toBottomOf="@+id/tvNameMain"
            tools:text="StarBoy" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>