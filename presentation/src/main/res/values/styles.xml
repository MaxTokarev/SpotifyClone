<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/font_sf_pro_display_medium</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="BaseTextView.TextViewMain">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="BaseTextView.TextViewSecondary">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

</resources>